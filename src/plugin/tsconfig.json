{
  "compilerOptions": {
    "module": "CommonJS",
    "baseUrl": ".",
    "moduleResolution": "node",
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "sourceMap": true,
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "outDir": "../../dist/plugin",
    "skipLibCheck": true
  },
  "exclude": ["src/**/__test__/", "node_modules"]
}
